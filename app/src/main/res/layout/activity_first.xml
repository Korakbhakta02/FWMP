<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2.0"
    >

    <Button
        android:id="@+id/admin"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_weight="1"
        android:background="@drawable/admin"
        android:contentDescription="Admin"
        android:foreground="@drawable/admin"
        android:textColor="#4da7ff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/donate"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:background="@drawable/donation"
        android:cropToPadding="true"
        android:contentDescription="donate"
        android:foreground="@drawable/donation"
        android:textColor="#4da7ff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/recieve"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_weight="1"
        android:background="@drawable/receive"
        android:foreground="@drawable/receive"
        android:contentDescription="Receive"
        android:textColor="#4da7ff"
        android:textSize="30sp" />

</LinearLayout>